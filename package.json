{
  "name": "wc-css-transform",
  "version": "0.1.1",
  "description": "Transform CSS for web components with PostCSS plugin support",
  "keywords": [
    "css",
    "web-components",
    "postcss",
    "transform",
    "shadow-dom",
    "css-transform",
    "wc"
  ],
  "public": true,
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "clean": "rimraf dist",
    "prepare": "pnpm build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "postcss": "8.4.38"
  },
  "devDependencies": {
    "@types/node": "20.12.12",
    "rimraf": "5.0.5",
    "rollup": "4.21.1",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-typescript": "11.1.6",
    "typescript": "5.4.5",
    "tslib": "2.6.2",
    "vitest": "1.6.0"
  }
}

